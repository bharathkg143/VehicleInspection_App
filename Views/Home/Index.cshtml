@{
    ViewData["Title"] = "Home Page";
}
<style>
    .container {
        width: 90%;
        max-width: 800px;
        padding: 20px;
    }

        .container h2 {
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"]
    .btnNext {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btnNext {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btnNext:hover {
            background-color: #0056b3;
        }

    @@media (min-width: 768px) {
        .container {
            width: 70%;
        }
    }

    input[type="text"]:focus {
        outline: none;
    }

</style>

<div class="container mt-3">
    <div class="row" style="margin-left:-30px;">
        <h4>
            <b>Please enter your vehicle Registration No.</b>
        </h4>
    </div>

    <div class="row mt-4">
        <div class="col-12" style="margin-left:-15px;">
            <input type="text" id="inp1" name="input1" class="form-control shadow-sm" style=""/>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12" style="font-size: 20px; color:darkgrey; margin-left:-15px;">
            <p class="form-label">eg. KL03MJ0114</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col d-flex justify-content-center">
            <button id="btnNext" class="btn btn-primary shadow w-50" style="margin-left:-20px;"><b>NEXT</b></button>
        </div>
    </div>
</div>

